<Window x:Class="WPFteste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFteste"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440" Opacity="0.8"
        ResizeMode="CanResizeWithGrip">

    <Grid>

        <Image Height="1009" Source="/background.jpg" Stretch="Fill" Width="1842" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-5" Canvas.Top="-8" Margin="-208,-5,0,0">
            <Image.Effect>
                <BlurEffect Radius="40"/>
            </Image.Effect>
        </Image>

        <Canvas Margin="0,0,10,10" >
            <Rectangle
    Width="380"
    Height="484"
    Fill="White"
    Canvas.Left="525"
    Stroke="Black" StrokeThickness="4"
            
    RadiusX="30" RadiusY="30"
    Canvas.Top="235" HorizontalAlignment="Center" VerticalAlignment="Top" Opacity="0.7" />

            <Rectangle
                Width="1838"
                Height="128"
                Fill="#000000"
               Opacity="0.8" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Image Source="/logo.png" Stretch="Fill" Canvas.Left="515" Canvas.Top="-165" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>

        <TextBox x:Name="TextBox_Usuario" HorizontalAlignment="Left" Margin="562,404,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="51" FontFamily="Adobe Hebrew" Background="#FF201E1E" Foreground="#FFDCDBD9" FontSize="32" >
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                    <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="BorderBrush" TargetName="border" Value="#FF7EB4EA"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="true">
                                        <Setter Property="BorderBrush" TargetName="border" Value="Red
"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox x:Name="TextBox_Senha" HorizontalAlignment="Left" Margin="562,499,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="51" FontFamily="Adobe Hebrew" Background="#FF201E1E" Foreground="#FFDCDBD9" TextChanged="TextBox_Senha_TextChanged" FontSize="32">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                    <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="BorderBrush" TargetName="border" Value="#FF7EB4EA"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="true">
                                        <Setter Property="BorderBrush" TargetName="border" Value="Red
"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Label x:Name="blablabla" Style="{StaticResource AdobeHebrew}" Content="USUÁRIO" HorizontalAlignment="Left" Margin="569,376,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Adobe Hebrew" Foreground="#FF443737" Height="28" Width="81"/>
        <Label x:Name="blablabla_Copy" Style="{StaticResource AdobeHebrew}" Content="SENHA" HorizontalAlignment="Left" Margin="569,471,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Adobe Hebrew" Foreground="#FF443737" Height="28" Width="63"/>
        <Button Content="Login" Click="Button_Click_1" HorizontalAlignment="Left" Margin="595,582,0,0" VerticalAlignment="Top" Height="68" Width="240" Background="#FFE8E5E5" FontFamily="Adobe Hebrew" FontSize="32" BorderBrush="Black" BorderThickness="5,5,5,5">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="blablabla_Copy2" Style="{StaticResource AdobeHebrew}" Content="Faça Login" HorizontalAlignment="Left" Margin="562,268,0,0" VerticalAlignment="Top" FontSize="64" FontFamily="Adobe Hebrew" Foreground="#FF443737" Height="94" Width="302">
            <Label.Effect>
                <DropShadowEffect
      ShadowDepth="1"
      Direction="200"
      Color="Black"
      Opacity="1"
      BlurRadius="1"
     />
            </Label.Effect>
        </Label>
        <Label x:Name="blablabla_Copy3" Style="{StaticResource AdobeHebrew}" Content="Não tenho uma conta" HorizontalAlignment="Left" Margin="591,668,0,0" VerticalAlignment="Top" FontSize="26" FontFamily="Adobe Hebrew" Foreground="#FF443737" Height="43" Width="244"/>


    </Grid>



</Window>
    
    
